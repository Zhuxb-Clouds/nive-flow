{
  "name": "nive-flow",
  "version": "2.0.0",
  "description": "NiveFlow 全栈自动化文档发布引擎",
  "type": "module",
  "bin": {
    "nive-flow": "bin/nive-flow.js"
  },
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build": "vue-tsc && vite build",
    "build:only": "vite build",
    "preview": "vite preview",
    "build:now": "tsx scripts/monitor.ts --once --force",
    "monitor": "tsx scripts/monitor.ts",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop ecosystem.config.cjs",
    "restart": "pm2 restart ecosystem.config.cjs"
  },
  "dependencies": {
    "@traptitech/markdown-it-katex": "^3.6.0",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "markdown-it": "^14.0.0",
    "node-cron": "^3.0.3",
    "shiki": "^1.0.0",
    "simple-git": "^3.22.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@vitejs/plugin-vue": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
